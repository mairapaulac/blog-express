  <div class="alert alert-danger" role="alert">{{text}}</div>
{{else}}

{{/each}}

<h3>Nova Categoria: </h3>

<div class="card mt-5">
  <div class="card-body">
    <form action="/admin/categoria/nova" method="post">

      <label for="nome">Nome: </label>
      <input
        type="text"
        name="nome"
        id="nome"
        placeholder="Nome da Categoria"
        class="form-control"
      />
      <label for="slug">Slug: </label>
      <input
        type="text"
        name="slug"
        id="slug"
        placeholder="Slug da Categoria"
        class="form-control"
      />
      <button type="submit" class="btn btn-success mt-5">Criar Categoria</button>
    </form>
  </div>
</div>