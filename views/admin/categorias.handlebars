<h2>Lista de Categorias</h2>
<hr />
{{#each categorias}}

  <div class="card mt-4 mb-3">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>{{slug}}</small>
    </div>
    <a href="/admin/categorias/editar/{{_id}}"><button
        class="btn btn-primary m-2"
        type="submit"
      >Editar Categoria</button></a>

    <form action="/admin/categoria/deletar" method="post">
      <input type="hidden" name="id" value="{{_id}}" />
      <button class="btn btn-danger m-2" type="submit">Deletar Categoria</button>
    </form>

  </div>
{{else}}

{{/each}}
<a href="/admin/categorias/add"><button class="btn btn-success">Adicionar
    categoria</button></a>