{{#each erros}}
  <div class="alert alert-danger" role="alert">{{text}}</div>
{{else}}

{{/each}}

<h3>Editar Categoria: </h3>

<div class="card mt-5">
  <div class="card-body">
    <form action="/admin/categoria/edit" method="post">
    <input type="hidden" name="id" value="{{categoriaRegistrada._id}}">

      <label for="nome">Nome: </label>
      <input
        type="text"
        name="nome"
        id="nome"
        placeholder="Nome da Categoria"
        class="form-control mt-3 mb-3"
        value="{{categoriaRegistrada.nome}}"
      />
      <label for="slug">Slug: </label>
      <input
        type="text"
        name="slug"
        id="slug"
        placeholder="Slug da Categoria"
        class="form-control mt-2"
        value="{{categoriaRegistrada.slug}}"
      />
      <button type="submit" class="btn btn-success mt-4">Editar Categoria</button>
    </form>
  </div>

</div>